<%= form_for(@stat, :html => { :class => "form-horizontal", :role => "form" }) do |f| %>
  <% if @stat.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@stat.errors.count, "error") %> prohibited this stat from being saved:</h4>

      <ul>
      <% @stat.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :aname, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :aname, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :age, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :age, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :height, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :height, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :weight, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :weight, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :wellness_goals, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :wellness_goals, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit :class => "btn btn-primary" %>
    </div>
  </div>
<% end %>
